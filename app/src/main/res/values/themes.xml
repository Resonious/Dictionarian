<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dictionarian" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logoTeal</item>
        <item name="colorPrimaryVariant">@color/logoTealOff</item>
        <item name="colorOnPrimary">@color/logoLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/logoRed</item>
        <item name="colorSecondaryVariant">@color/logoRed</item>
        <item name="colorOnSecondary">@color/logoLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Dictionarian.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dictionarian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dictionarian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>